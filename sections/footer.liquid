    <p>Terms of Use</p>
    <p>Privacy Policy</p>
  </div>
</footer>

<style>
    .footer-main {
        background-color: {{ section.settings.background }};
        color: {{ section.settings.text }};
        padding: 10px;
    }

    .footer-sec-1 {
        margin-top: 20px;
        display: flex;
        justify-content: space-around;
    }

    .footer-sec-2 {
        display: flex;
    }

    .footer-sec-2 p {
        padding: 10px;
    }
</style>

{% schema %}
{
  "name": "footer",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background Color",
      "default": "#F4F4F4"
    },
    {
      "type": "color",
      "id": "text",
      "label": "Text Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "name": "Links",
      "type": "links",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}
